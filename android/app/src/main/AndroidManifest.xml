<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internet permission for translation API -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Network state permission for connectivity check -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Wake lock permission for TTS -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Write external storage for saving translations -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Read external storage for loading translations -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- Vibration permission for notifications -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Foreground service permission for TTS -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:label="مترجم هوشمند"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:preserveLegacyExternalStorage="false"
        android:theme="@style/LaunchTheme"
        android:exported="true">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">
            
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI is initializing. After that, this theme
                 continues to determine the Window background behind the Flutter UI. -->
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            
            <!-- Deep link for Bazaar app -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" 
                      android:host="cafebazaar.ir" 
                      android:pathPrefix="/app/ir.behtarinarts.dikshenery" />
            </intent-filter>
        </activity>
        
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
            
        <!-- TTS Service -->
        <service
            android:name="com.tts.flutter_tts.FlutterTTSService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
            
        <!-- Bazaar In-App Billing Service -->
        <service
            android:name="ir.cafebazaar.pardakht.InAppBillingService"
            android:exported="false" />
            
        <meta-data
            android:name="ir.cafebazaar.pardakht.PAYMENT_SERVICE"
            android:value="ir.cafebazaar.pardakht.InAppBillingService" />
    </application>
</manifest> 